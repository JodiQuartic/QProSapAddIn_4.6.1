<UserControl x:Class="SapHanaAddIn.TableViewerPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
             xmlns:ui="clr-namespace:SapHanaAddIn"
             xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
             xmlns:frameworkControls="clr-namespace:ArcGIS.Desktop.Framework.Controls;assembly=ArcGIS.Desktop.Framework"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500"
             d:DataContext="{Binding Path=ui.TableViewerPanelViewModel}" >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <DockPanel Name="dpMain" HorizontalAlignment="Stretch" Width="auto" MinWidth="500" MinHeight="600" MaxHeight="600" VerticalAlignment="Top">

        <StackPanel Orientation="Vertical" Width="auto" VerticalAlignment="Top">

            <TextBlock Text="{Binding Heading}" Margin="3,3,5,3" Style="{DynamicResource Esri_TextBlockDockPaneHeader}" VerticalAlignment="Top">
            </TextBlock>

            <DockPanel KeyboardNavigation.TabNavigation="Local" Width="auto" Margin="1,1,1,1">

                <StackPanel Orientation="Horizontal" Width="auto">
                    <TextBlock   HorizontalAlignment="Left"  Height="25" Text="  Schemas " Style="{DynamicResource Esri_TextBlockH3}" ></TextBlock>
                    <ComboBox   HorizontalAlignment="Left"  Height="25" Width="150" Name="cboSchemas" Visibility="{Binding Schema._canExectute}" SelectionChanged="cboSchemas_SelectionChanged"
                         ItemsSource="{Binding SchemaColl}" SelectedItem="{Binding CurrentSchema}"/>
                    <TextBlock  HorizontalAlignment="Left"  Height="25" Text="  Tables "  Style="{DynamicResource Esri_TextBlockH3}"  ></TextBlock>
                    <ComboBox  HorizontalAlignment="Left"  Height="25" Width="150" Name="cboTables" Visibility="{Binding Schema._canExectute}" SelectionChanged="cboTables_SelectionChanged" 
                        ItemsSource="{Binding Tables}"  SelectedItem="{Binding CurrentTable}" />
                </StackPanel>

            </DockPanel>

            <DockPanel KeyboardNavigation.TabNavigation="Local" Height="75" Width="Auto" Margin="3,3,3,3"  >

                <TextBox Name="txtQueryText" TextWrapping="Wrap"  Height="60" Width="auto"  
                     Background="{DynamicResource Esri_BackgroundPressedBrush}" 
                     Foreground="{DynamicResource Esri_TextStyleDefaultBrush}" 
                     Text="{Binding QueryTxt.SelectString, Mode=OneWay}"                               
                         VerticalScrollBarVisibility="Visible" >

                </TextBox>

            </DockPanel>

            <Button x:Name="btnExecute" HorizontalAlignment="Right" Style="{DynamicResource Esri_Button}" Visibility="{Binding QueryText._canExectute}"
                        Content="Execute SQL" Click="btnExecute_Click"></Button>
            
            <TextBlock Text="{Binding Heading2}" Margin="3,3,5,3" Style="{DynamicResource Esri_TextBlockDockPaneHeader}">
            </TextBlock>
            
            <Grid Name="dgForGrid" HorizontalAlignment="Stretch" Width="Auto" MinWidth="500" MinHeight="100" MaxHeight="100">
                <DataGrid Name="dgForResults" HorizontalAlignment="Stretch" Width="Auto" MinWidth="500" MinHeight="99" MaxHeight="99" 
                                  Style="{DynamicResource Esri_DataGrid}"
                                ScrollViewer.CanContentScroll="True"      
                              IsReadOnly="True" 
                              AutoGenerateColumns="True"
                              HeadersVisibility="Column"
                              HorizontalScrollBarVisibility="Visible"
                              VerticalScrollBarVisibility="Visible"
                              ColumnWidth="SizeToCells" 
                              Grid.Row="0"
                              ItemsSource="{Binding Results, UpdateSourceTrigger=PropertyChanged}"
                               >
                    <!--DataGrid.ContextMenu>
                                <ContextMenu>
                                <MenuItem Header="Zoom To" MouseUp="MenuItem_MouseUp"/>
                            </ContextMenu-->

                </DataGrid>
            </Grid>
          
                    <Button Name="btnAddTOC" Content="Add to Map Contents"  HorizontalAlignment="Right" Click="btnAddTOC_Click"
                            Style="{DynamicResource Esri_Button}">
            </Button>

            <DockPanel>
                <StatusBar Background="LightGray" HorizontalAlignment="Stretch" Width="auto">
                    <!--StatusBarItem HorizontalAlignment="Center" >
                        <TextBlock Name="txtTotRecCount"  Text="{Binding TotRecCount.SelectString, StringFormat='Total: {0}'}"          
                                ToolTip="Total number of rows in the database"
                                   Foreground="Black"            
                                    VerticalAlignment="Center"/>
                    </-->
                    <StatusBarItem HorizontalAlignment="Center" >
                        <TextBlock Name="txtActRecCount"  Text="{Binding ActRecCount.SelectString, StringFormat='Actual: {0}'}"          
                                ToolTip="Actual number of rows in the database"
                                   Foreground="Black"          
                                    VerticalAlignment="Center"/>
                    </StatusBarItem>
                    <StatusBarItem HorizontalAlignment="Center">
                        <TextBlock  Name="txtSpatialCol" Text="{Binding SpatialCol.SelectString, StringFormat='Spatial: {0}'}" ToolTip="Field name that is Spatial Type"
                                   VerticalAlignment="Center"
                                  Foreground="Black"  />
                    </StatusBarItem>
                    <StatusBarItem HorizontalAlignment="Center" >
                        <TextBlock Name="txtObjidCol"  Text="{Binding ObjidCol.SelectString ,StringFormat='Objectid: {0}'}" ToolTip="Field name that is a Primary Key"
                                   Foreground="Black"            
                                    VerticalAlignment="Center"/>
                    </StatusBarItem>
                </StatusBar>
            </DockPanel>

        </StackPanel>

    </DockPanel>
</UserControl>
